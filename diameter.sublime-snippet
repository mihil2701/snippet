long long int dfs1(long long int node, long long int count)
{
    vb[node] = 1;
    count++;
    for (auto i = adj1[node].begin(); i != adj1[node].end(); ++i) {
        if (!vb[*i]) {
            if (count > maxcount) {
                maxcount = count;
                x = *i;
            }
            dfs1(*i,count);
        }
    }
    return x;
} 
long long int diameter(long long int n)
{
    long long int x=dfs1(n,0);
    for (long long int i = 1; i < 300001; ++i)
        vb[i] = 0;
    dfs1(x,0);
    return maxcount;
}
